extends ../layout

block content 
  .container
    .row
      each item in movies
        .col-md-4(style="text-align:center")
          .thumbnail
            a(href="/movie/#{item._id}")
              img(src="#{item.poster}", alt="#{item.title}")
            .caption
              h3 #{item.title}
              p: a.btn.btn-primary(href="/movie/#{item._id}",role="button") 观看预告片               